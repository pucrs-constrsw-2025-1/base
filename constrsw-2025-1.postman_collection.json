	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{ "key": "client_id", "value": "oauth", "type": "text" },
								{ "key": "username", "value": "{{username}}", "type": "text" },
								{ "key": "password", "value": "{{password}}", "type": "text" },
								{ "key": "grant_type", "value": "password", "type": "text" }
							]
						},
						"url": {
							"raw": "{{oauth_base_url}}/login",
							"host": ["{{oauth_base_url}}"],
							"path": ["login"]
						},
						"description": "Autenticar usuário e obter token."
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [ ],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{ "key": "refresh_token", "value": "{{refresh_token}}", "type": "text" }
							]
						},
						"url": {
							"raw": "{{oauth_base_url}}/refresh",
							"host": ["{{oauth_base_url}}"],
							"path": ["refresh"]
						},
						"description": "Renovar token de acesso."
					},
					"response": []
				},
				{
					"name": "Validate Token",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
						],
						"url": {
							"raw": "{{oauth_base_url}}/validate",
							"host": ["{{oauth_base_url}}"],
							"path": ["validate"]
						},
						"description": "Validar token de acesso."
					},
					"response": []
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [ ],
						"url": {
							"raw": "{{oauth_base_url}}/health",
							"host": ["{{oauth_base_url}}"],
							"path": ["health"]
						},
						"description": "Verificar status da API."
					},
					"response": []
				}
			]
		},
