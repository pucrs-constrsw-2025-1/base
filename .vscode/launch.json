{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "OAuth Service",
            "request": "attach",
            "address": "localhost",
            "port": 8101,
            "localRoot": "${workspaceFolder}/backend/oauth",
            "remoteRoot": "/app",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/backend/oauth/dist/**/*.js"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/backend/oauth/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "java",
            "name": "Resources Service",
            "request": "attach",
            "hostName": "localhost",
            "port": 8107,
            "projectName": "constrsw/resources",
            "sourcePaths": [
                "${workspaceFolder}/backend/resources/src/main/java"
            ],
            "vmArgs": "-Xms256m -Xmx512m -XX:+UseContainerSupport -Djava.security.egd=file:/dev/./urandom"
        }
    ]
}