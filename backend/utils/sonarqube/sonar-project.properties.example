# Configuração do SonarQube para projetos Java/Spring Boot
# Copie este arquivo para sonar-project.properties e ajuste conforme necessário

# Informações do Projeto
sonar.projectKey=constrsw-service-name
sonar.projectName=ConstrSW Service Name
sonar.projectVersion=1.0

# Diretórios do Código Fonte
sonar.sources=src/main/java
sonar.tests=src/test/java

# Diretórios de Binários
sonar.java.binaries=target/classes
sonar.java.test.binaries=target/test-classes

# Configuração do Servidor SonarQube
sonar.host.url=http://localhost:9000
sonar.login=seu-token-aqui

# Configurações de Linguagem
sonar.java.source=11
sonar.java.target=11

# Configurações de Cobertura (se usar JaCoCo)
sonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml

# Configurações de Testes
sonar.test.inclusions=**/*Test.java,**/*Tests.java

# Exclusões
sonar.exclusions=**/target/**,**/node_modules/**,**/*.min.js,**/*.min.css

# Configurações de Qualidade
sonar.qualitygate.wait=true

# Configurações de Encoding
sonar.sourceEncoding=UTF-8 